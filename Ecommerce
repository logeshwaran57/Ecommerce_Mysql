-- 1. Create database and use it
CREATE DATABASE IF NOT EXISTS ecommerce;
USE ecommerce;

-- 2. Drop tables if exist (for clean re-run)
DROP TABLE IF EXISTS order_items;
DROP TABLE IF EXISTS orders;
DROP TABLE IF EXISTS products;
DROP TABLE IF EXISTS customers;

-- 3. Create tables
CREATE TABLE customers (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    email VARCHAR(100) UNIQUE NOT NULL,
    address TEXT
);

CREATE TABLE products (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    price DECIMAL(10,2) NOT NULL,
    description TEXT
);

CREATE TABLE orders (
    id INT AUTO_INCREMENT PRIMARY KEY,
    customer_id INT,
    order_date DATE NOT NULL,
    total_amount DECIMAL(10,2) NOT NULL,
    FOREIGN KEY (customer_id) REFERENCES customers(id)
);

-- 4. Insert sample data
INSERT INTO customers (name, email, address) VALUES
('John Doe', 'john@example.com', '123 Main St, Chennai'),
('Jane Smith', 'jane@example.com', '456 Oak Ave, Mumbai'),
('Bob Johnson', 'bob@example.com', '789 Pine Rd, Delhi');

INSERT INTO products (name, price, description) VALUES
('Product A', 25.00, 'High quality item A'),
('Product B', 35.00, 'Premium item B'),
('Product C', 40.00, 'Standard item C');

INSERT INTO orders (customer_id, order_date, total_amount) VALUES
(1, '2026-02-01', 75.00),   -- Recent (within 30 days)
(2, '2026-01-15', 120.00),
(1, '2026-01-05', 50.00),
(3, '2026-01-20', 200.00);

-- =====================================
-- REQUIRED QUERIES (Execute in order)
-- =====================================

-- QUERY 1: Customers with orders in last 30 days
SELECT 'QUERY 1: Customers (last 30 days)' as Result;
SELECT DISTINCT c.name, c.email
FROM customers c JOIN orders o ON c.id = o.customer_id
WHERE o.order_date >= '2026-01-10';  -- 30 days before 2026-02-09

-- QUERY 2: Total amount per customer
SELECT 'QUERY 2: Total per customer' as Result;
SELECT c.name, SUM(o.total_amount) as total_spent
FROM customers c LEFT JOIN orders o ON c.id = o.customer_id
GROUP BY c.id, c.name;

-- QUERY 3: Update Product C price to 45.00
UPDATE products SET price = 45.00 WHERE name = 'Product C';
SELECT 'QUERY 3: Product C updated to $45' as Result;

-- QUERY 4: Add discount column
ALTER TABLE products ADD COLUMN discount DECIMAL(5,2) DEFAULT 0.00;
SELECT 'QUERY 4: Discount column added' as Result;

-- QUERY 5: Top 3 highest priced products
SELECT 'QUERY 5: Top 3 products by price' as Result;
SELECT name, price FROM products ORDER BY price DESC LIMIT 3;

-- QUERY 6: Prep for normalization (will update after order_items)
SELECT 'QUERY 6: Will show after normalization' as Note;

-- QUERY 7: Customer name + order date
SELECT 'QUERY 7: Customers & Orders Join' as Result;
SELECT c.name, o.order_date, o.total_amount
FROM customers c JOIN orders o ON c.id = o.customer_id;

-- QUERY 8: Orders > 150.00
SELECT 'QUERY 8: Orders over 150' as Result;
SELECT * FROM orders WHERE total_amount > 150.00;

-- QUERY 9: Normalization - Create order_items
CREATE TABLE order_items (
    id INT AUTO_INCREMENT PRIMARY KEY,
    order_id INT,
    product_id INT,
    quantity INT NOT NULL,
    FOREIGN KEY (order_id) REFERENCES orders(id),
    FOREIGN KEY (product_id) REFERENCES products(id)
);

-- Insert order_items data
INSERT INTO order_items (order_id, product_id, quantity) VALUES
(1, 1, 2), (1, 2, 1),    -- Order 1: 2A + 1B = 50+35=85 (adjusted)
(2, 1, 3), (2, 3, 1),    -- Order 2: 3A + 1C = 75+45=120
(3, 2, 1),               -- Order 3: 1B = 35 (adjusted)
(4, 3, 4);               -- Order 4: 4C = 180 (adjusted)

-- Update totals to match items
UPDATE orders SET total_amount = 85.00 WHERE id=1;
UPDATE orders SET total_amount = 120.00 WHERE id=2;
UPDATE orders SET total_amount = 35.00 WHERE id=3;
UPDATE orders SET total_amount = 180.00 WHERE id=4;

SELECT 'QUERY 9: Normalization complete' as Result;

-- UPDATED QUERY 6: Customers who ordered Product A
SELECT 'QUERY 6 (Updated): Customers with Product A' as Result;
SELECT DISTINCT c.name
FROM customers c
JOIN orders o ON c.id = o.customer_id
JOIN order_items oi ON o.id = oi.order_id
JOIN products p ON oi.product_id = p.id
WHERE p.name = 'Product A';

-- QUERY 10: Average total of all orders
SELECT 'QUERY 10: Average order total' as Result;
SELECT AVG(total_amount) as average_order_total FROM orders;

-- FINAL TABLES OVERVIEW
SELECT 'FINAL CUSTOMERS TABLE' as Table_Overview;
SELECT * FROM customers;
SELECT 'FINAL PRODUCTS TABLE' as Table_Overview;
SELECT * FROM products;
SELECT 'FINAL ORDERS TABLE' as Table_Overview;
SELECT * FROM orders;
SELECT 'FINAL ORDER_ITEMS TABLE' as Table_Overview;
SELECT * FROM order_items;
